#!/usr/bin/env raku
use v6.d;

use HTMX;
use HTMOO;

#`[
### the minimal page
my $p = Page.new;

$p.title: "Raku HTMX";
$p.style: 'p {color: blue;}';
$p.body: '<p>Hello World!</p>';

say $p.render;
#]

### the synopsis page
my $p = Page.new;

$p.meta: {:charset<utf-8>};
$p.meta: {:name<viewport>, :content<width=device-width, initial-scale=1>};
$p.meta: {:name<description>, :content<raku does htmx>};

$p.title: "Raku HTMX";
$p.script: :src<https://unpkg.com/htmx.org@1.7.0>;

$p.link: {:rel<stylesheet>, :href<https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css> };

$p.style:   q:to/END/;
                .jumbotron {
                  background-color: #e6ffe6;
                  text-align: center;
                }
            END

$p.body: [
    div( :class<jumbotron>, [
        h1("Welcome to Dunder Mifflin!"),                          #use parens to stop <h1> slurping <p>
        p  "Dunder Mifflin Inc. (stock symbol {strong 'DMI'}) " ~
            q:to/END/;
            is a micro-cap regional paper and office
            supply distributor with an emphasis on servicing
            small-business clients.
            END
    ]),

    p :hx-get<https://v2.jokeapi.dev/joke/Any?format=txt&safe-mode>,
        "Click Me",
];

say $p.render;

