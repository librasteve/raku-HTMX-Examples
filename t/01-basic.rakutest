use Test;
use HTMX;

is h1('text', :class<jumbotron>).chomp, '<h1 class="jumbotron">text</h1>',        'h1';

is h1(:class<doobie>).chomp, '<h1 class="doobie"></h1>',                          'empty';

is div(:class<jumbotron>, 'xx').chomp, '<div class="jumbotron">xx</div>',         'regular';

is hr, '<hr />',                                                                  'singluar';


done-testing;
